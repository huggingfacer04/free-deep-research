# Free Deep Research Frontend - Environment Configuration
# Development configuration for React web application

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Application details
REACT_APP_NAME=Free Deep Research Frontend
REACT_APP_VERSION=3.0.0
REACT_APP_BUILD_DATE=2025-07-19

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (adjust based on your setup)
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080

# Tauri Desktop App API (if running in hybrid mode)
REACT_APP_TAURI_API_URL=http://localhost:1420

# =============================================================================
# EXTERNAL SERVICES (Frontend-specific)
# =============================================================================

# Public API keys (only use public/client-safe keys here)
# Note: Never put secret API keys in frontend environment files

# Analytics (if using client-side analytics)
REACT_APP_ANALYTICS_ID=your_analytics_id_here

# Error tracking (if using client-side error tracking)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development server configuration
PORT=3000
HOST=localhost

# Enable development features
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_DEV_TOOLS=true

# Hot reload settings
FAST_REFRESH=true
GENERATE_SOURCEMAP=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features for development
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme settings
REACT_APP_DEFAULT_THEME=auto
REACT_APP_ENABLE_THEME_SWITCHING=true

# Language settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ENABLE_I18N=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Bundle optimization
REACT_APP_ENABLE_BUNDLE_ANALYZER=false
REACT_APP_ENABLE_COMPRESSION=true

# Caching
REACT_APP_CACHE_DURATION=3600000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy
REACT_APP_CSP_ENABLED=true

# HTTPS settings (for production)
HTTPS=false
SSL_CRT_FILE=
SSL_KEY_FILE=
