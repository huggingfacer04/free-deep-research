# Docker Environment Configuration for Free Deep Research Tauri Application
# Copy this file to .env and customize as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
RUST_ENV=development
RUST_LOG=info
RUST_BACKTRACE=1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# SQLite database path (for Tauri desktop app)
DATABASE_URL=sqlite:///data/research.db
TEST_DATABASE_URL=sqlite:///data/test_research.db

# =============================================================================
# REDIS SETTINGS (Optional - for caching)
# =============================================================================
REDIS_PASSWORD=tauri_redis_pass_change_me
REDIS_PORT=6380

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9091

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=tauri_grafana_pass_change_me
GRAFANA_PORT=3002

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Mock Server
MOCK_SERVER_PORT=1080

# Test Configuration
TEST_TIMEOUT=300
COVERAGE_THRESHOLD=80

# =============================================================================
# API KEYS (Optional - for testing with real APIs)
# =============================================================================
# OpenRouter API Key
OPENROUTER_API_KEY=

# SerpAPI Key
SERPAPI_KEY=

# Jina API Key
JINA_API_KEY=

# Firecrawl API Key
FIRECRAWL_API_KEY=

# Tavily API Key
TAVILY_API_KEY=

# Exa API Key
EXA_API_KEY=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload settings
CARGO_WATCH_DELAY=2
NODE_ENV=development

# CORS settings for development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,tauri://localhost

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret (for any authentication needs)
JWT_SECRET=dev_jwt_secret_key_change_me_in_production

# Encryption key (if needed)
ENCRYPTION_KEY=dev_encryption_key_change_me_in_production

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Resource limits
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
BACKUP_INTERVAL=30

# Memory limits (for Docker containers)
REDIS_MEMORY_LIMIT=256M
PROMETHEUS_MEMORY_LIMIT=512M
GRAFANA_MEMORY_LIMIT=256M

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/data/logs/application.log

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# =============================================================================
# NETWORK SETTINGS
# =============================================================================
# Docker network subnet
DOCKER_SUBNET=172.21.0.0/16

# Host networking (for accessing Tauri app from containers)
HOST_NETWORK_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_TESTING=true
ENABLE_MOCK_APIS=true
ENABLE_METRICS_COLLECTION=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_PROFILING=false
ENABLE_TRACING=true

# =============================================================================
# CONTAINER SETTINGS
# =============================================================================
# Container restart policy
RESTART_POLICY=unless-stopped

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s

# =============================================================================
# VOLUME SETTINGS
# =============================================================================
# Data persistence
DATA_VOLUME_PATH=./data
LOGS_VOLUME_PATH=./logs
BACKUPS_VOLUME_PATH=./backups
CONFIG_VOLUME_PATH=./config

# =============================================================================
# TIMEZONE SETTINGS
# =============================================================================
TZ=UTC

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Add any custom environment variables here
CUSTOM_SETTING_1=
CUSTOM_SETTING_2=

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and customize the values
# 2. Never commit .env files with real API keys to version control
# 3. Use strong passwords in production
# 4. Adjust memory limits based on your system resources
# 5. Enable only the features you need to optimize resource usage
