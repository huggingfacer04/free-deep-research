# Free Deep Research System - Environment Configuration Template
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# API KEYS - External Services
# =============================================================================

# OpenRouter.ai - For AI model access
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# SerpApi - For search results
# Get your key from: https://serpapi.com/manage-api-key
SERPAPI_KEY=your_serpapi_key_here

# Jina AI - For content processing
# Get your key from: https://jina.ai/
JINA_API_KEY=your_jina_api_key_here

# Firecrawl - For web scraping
# Get your key from: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Application Port (for development server)
PORT=3000

# Application Name
APP_NAME=Free Deep Research System

# Application Version
APP_VERSION=1.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for API key storage (generate a secure random string)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT Secret for authentication (if implementing user auth)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Local database path (SQLite)
DATABASE_PATH=./data/research.db

# Database encryption (true/false)
DATABASE_ENCRYPTION=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Default rate limits per service (requests per minute)
OPENROUTER_RATE_LIMIT=60
SERPAPI_RATE_LIMIT=100
JINA_RATE_LIMIT=1000
FIRECRAWL_RATE_LIMIT=500

# Rate limit buffer percentage (0-100)
RATE_LIMIT_BUFFER=10

# =============================================================================
# RESEARCH ENGINE CONFIGURATION
# =============================================================================

# Default research methodology (don_lim, nick_scamara, hybrid)
DEFAULT_METHODOLOGY=hybrid

# Maximum concurrent research workflows
MAX_CONCURRENT_WORKFLOWS=3

# Research timeout (in minutes)
RESEARCH_TIMEOUT=30

# Maximum search results per query
MAX_SEARCH_RESULTS=50

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/application.log

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# Metrics collection interval (in seconds)
METRICS_INTERVAL=30

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================

# Backup directory
BACKUP_DIR=./backups

# Automatic backup interval (in hours)
BACKUP_INTERVAL=24

# Maximum backup files to keep
MAX_BACKUP_FILES=30

# Data retention period (in days)
DATA_RETENTION_DAYS=90

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development mode features (true/false)
DEVELOPMENT_MODE=true

# Enable hot reload (true/false)
HOT_RELOAD=true

# Enable debug logging (true/false)
DEBUG_LOGGING=true

# Mock external APIs for testing (true/false)
MOCK_APIS=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom user agent for web requests
USER_AGENT=Free-Deep-Research-System/1.0.0

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# Retry delay (in milliseconds)
RETRY_DELAY=1000

# Enable request caching (true/false)
ENABLE_CACHING=true

# Cache TTL (in minutes)
CACHE_TTL=60

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Enable desktop notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Notification sound (true/false)
NOTIFICATION_SOUND=true

# Email notifications (if implementing)
EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# =============================================================================
# PROXY CONFIGURATION (Optional)
# =============================================================================

# HTTP Proxy (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# Proxy authentication
PROXY_USER=
PROXY_PASS=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable AI-powered analysis (true/false)
ENABLE_AI_ANALYSIS=true

# Enable collaborative features (true/false)
ENABLE_COLLABORATION=false

# Enable cloud sync (true/false)
ENABLE_CLOUD_SYNC=false
