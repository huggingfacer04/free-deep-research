{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "package": {
    "productName": "Free Deep Research System",
    "version": "3.0.0"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Free Deep Research System",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "permissions": [
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-create-dir",
    "fs:allow-remove-dir",
    "fs:allow-remove-file",
    "fs:allow-rename-file",
    "fs:allow-exists",
    "path:default",
    "os:default",
    "notification:default",
    "global-shortcut:default",
    "clipboard:default",
    "http:default"
  ],
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.bmad.free-deep-research",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2025 BMAD AI Agent Team",
    "category": "Productivity",
    "shortDescription": "Enterprise-grade deep research system",
    "longDescription": "A comprehensive, enterprise-grade deep research system that operates entirely on free service tiers while delivering professional-level reliability, user experience, and research quality.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English"],
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "allowDowngrades": true
      }
    }
  }
  }
}
