#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
  echo "❌ Error: package.json not found. Make sure you're in the project root."
  exit 1
fi

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Please fix TypeScript errors before committing."
  exit 1
fi

# Run linting
echo "🔍 Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix ESLint errors before committing."
  exit 1
fi

# Check formatting
echo "💅 Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Code formatting check failed. Run 'npm run format' to fix formatting issues."
  exit 1
fi

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

# Check Rust formatting (if src-tauri exists)
if [ -d "src-tauri" ]; then
  echo "🦀 Checking Rust formatting..."
  cd src-tauri
  cargo fmt --check
  if [ $? -ne 0 ]; then
    echo "❌ Rust formatting check failed. Run 'cargo fmt' to fix formatting issues."
    exit 1
  fi
  
  echo "🔍 Running Rust linting..."
  cargo clippy -- -D warnings
  if [ $? -ne 0 ]; then
    echo "❌ Rust linting failed. Please fix Clippy warnings before committing."
    exit 1
  fi
  cd ..
fi

echo "✅ All pre-commit checks passed!"
